    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Support</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Support.ID" />
            <div class="form-group">
                <label asp-for="Support.City" class="control-label"></label>
                <input asp-for="Support.City" class="form-control" />
                <span asp-validation-for="Support.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Support.Name" class="control-label"></label>
                <input asp-for="Support.Name" class="form-control" />
                <span asp-validation-for="Support.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Support.Day" class="control-label"></label>
                <input asp-for="Support.Day" class="form-control" />
                <span asp-validation-for="Support.Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Support.Hours" class="control-label"></label>
                <input asp-for="Support.Hours" class="form-control" />
                <span asp-validation-for="Support.Hours" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Support.Notes" class="control-label"></label>
                <textarea cols="50" rows="10" Support.Notes" class="form-control"></textarea>
                <span asp-validation-for="Support.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

